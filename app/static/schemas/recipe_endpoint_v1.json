{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "customer": {
      "type": "object",
      "properties": {
        "first_name": { "type": "string" },
        "last_name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone_number": { "type": "string" },
        "birth_date": { "type": "string" },
        "home_address": {
          "type": "object",
          "properties": {
            "street_name": { "type": "string" },
            "house_number": { "type": "string" },
            "postal_code": { "type": "string" },
            "city": { "type": "string" }
          },
          "required": ["street_name", "house_number", "postal_code", "city"]
        }
      },
      "required": ["first_name", "last_name", "email", "birth_date", "phone_number", "home_address"]
    },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "number": { "type": "string" },
          "name": { "type": "string" },
          "amount": { "type": "integer", "minimum": 0 },
          "price": { "type": "number", "minimum": 0 },
          "squashed": { "type": "boolean" }
        },
        "required": ["id", "amount", "squashed"]
      },
      "minItems": 1
    },
    "pharmacy_id": { "type": "string" },
    "recipe_url": { "type": "string", "format": "uri" },
    "order_id": { "type": "string" }
  },
  "required": [
    "customer",
    "products",
    "pharmacy_id",
    "recipe_url"
  ]
}
